<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spielerX"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:id="@+id/statusText"
            android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
    />
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/statusText" app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintVertical_bias="0.19" android:background="@android:color/background_dark">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                  android:id="@+id/row0">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/f0" android:layout_weight="1"
                    android:gravity="center" app:fontFamily="sans-serif-black"
                    android:textSize="100sp" android:background="#FFFFFF" android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp" android:layout_marginRight="1dp" android:layout_marginBottom="1dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/f1" android:layout_weight="1"
                    android:gravity="center" app:fontFamily="sans-serif-black"
                    android:textSize="100sp" android:background="#FFFFFF" android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp" android:layout_marginRight="1dp" android:layout_marginBottom="1dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/f2" android:layout_weight="1"
                    android:gravity="center" app:fontFamily="sans-serif-black"
                    android:textSize="100sp" android:background="#FFFFFF" android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp" android:layout_marginRight="2dp" android:layout_marginBottom="1dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                  android:id="@+id/row1">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/f3" android:layout_weight="1"
                    android:gravity="center" app:fontFamily="sans-serif-black"
                    android:textSize="100sp" android:background="#FFFFFF" android:layout_marginLeft="2dp"
                    android:layout_marginTop="1dp" android:layout_marginRight="1dp" android:layout_marginBottom="1dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/f4" android:layout_weight="1"
                    android:gravity="center" app:fontFamily="sans-serif-black"
                    android:textSize="100sp" android:background="#FFFFFF" android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp" android:layout_marginRight="1dp" android:layout_marginBottom="1dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/f5" android:layout_weight="1"
                    android:gravity="center" app:fontFamily="sans-serif-black"
                    android:textSize="100sp" android:background="#FFFFFF" android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp" android:layout_marginRight="2dp" android:layout_marginBottom="1dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                  android:id="@+id/row2">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/f6" android:layout_weight="1"
                    android:gravity="center" app:fontFamily="sans-serif-black"
                    android:textSize="100sp" android:background="#FFFFFF" android:layout_marginLeft="2dp"
                    android:layout_marginTop="1dp" android:layout_marginRight="1dp" android:layout_marginBottom="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/f7" android:layout_weight="1"
                    android:gravity="center" app:fontFamily="sans-serif-black"
                    android:textSize="100sp" android:background="#FFFFFF" android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp" android:layout_marginRight="1dp" android:layout_marginBottom="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/f8" android:layout_weight="1"
                    android:gravity="center" app:fontFamily="sans-serif-black"
                    android:textSize="100sp" android:background="#FFFFFF" android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp" android:layout_marginRight="2dp" android:layout_marginBottom="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"/>
        </TableRow>
    </TableLayout>
    <TextView
            android:text="Player X : 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/playerXWins"
            app:layout_constraintTop_toBottomOf="@+id/statusText" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="Player O : 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/playerOWins"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/statusText"/>

</androidx.constraintlayout.widget.ConstraintLayout>